<div class="container">
    <div class="row mt-2">
        <h3 class="text-center text-uppercase p-3">Lista de Pagos</h3>
        <div class="p-3">
            <a href="/addPago" class="btn btn-primary">Registrar Pago</a>
        </div>
        
        {{#if pagos}}

            <table class="table text-center">
                <thead>
                    <tr class="table-dark">
                        <th scope="col">Código</th>
                        <th scope="col">Venta</th>
                        <th scope="col">Fecha de Pago</th>
                        <th scope="col">Forma de Pago</th>
                        <th scope="col">Monto Pagado</th>
                        <th scope="col">Número de Referencia</th>
                        <th scope="col">Banco</th>
                        <th scope="col">Editar/Eliminar</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each pagos}}
                        <tr>
                            <td>{{ PagoID }}</td>
                            <td>{{ VentaID }}</td> <!-- Aquí puedes mostrar el nombre o número de la venta, si lo prefieres -->
                            <td>{{formatDate FechaPago}}</td>
                            <td>{{ FormaPago }}</td>
                            <td>{{ MontoPagado }}</td>
                            <td>{{ NumeroReferencia }}</td>
                            <td>{{ NombreBanco }}</td>
                            <td>
                                <div>
                                    <a href="/editPago/{{PagoID}}" class="p-2">
                                        <i class="fa-solid fa-pen-to-square" style="color: #514d1f;"></i>
                                    </a>
                                    <a href="/deletePago/{{PagoID}}" class="p-2">
                                        <i class="fa-solid fa-user-minus" style="color: #691c1c;"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    {{/each}}
                </tbody>
                <tfoot></tfoot>
            </table>
        </div>
        {{else}}
            <div class="card text-center mx-auto" style="width: 350px;">
                <div class="card-header">
                    <h3>Debes registrar un pago</h3>
                </div>
                <div class="card-body">
                    <p>Presiona para registrar un pago</p>
                    <a href="/addPago" class="btn btn-primary">Registrar</a>
                </div>
            </div>
        {{/if}}
    </div>
</div>
