<div class="container p-4">
    <div class="row">
        <div class="col-md-6 mx-auto">
            <div class="card text-center">
                <div class="card-header">
                    <h3 class="text-uppercase">Editar Pago</h3>
                </div>
                <div class="card-body">
                    <form action="/editPago/{{pago.PagoID}}" method="post">

                        <div class="input-group mt-2">
                            <label for="PagoID" class="input-group-text">Código</label>
                            <input class="form-control" type="text" name="PagoID" id="PagoID" value="{{pago.PagoID}}" disabled>
                        </div>

                        <div class="input-group mt-2">
                            <label for="VentaID" class="input-group-text">Venta</label>
                            <select class="form-control" name="VentaID" id="VentaID" required>
                                <option value="" disabled>Selecciona una venta</option>
                                {{#each ventas}}
                                    <option value="{{this.VentaID}}" {{#ifCond this.VentaID ../pago.VentaID}}selected{{/ifCond}}>{{this.NumeroFacturaTicket}}</option>
                                {{/each}}
                            </select>
                        </div>

                        <div class="input-group mt-2">
                            <label for="FechaPago" class="input-group-text">Fecha de Pago</label>
                            <input class="form-control" type="date" name="FechaPago" id="FechaPago" value="{{formatDate pago.FechaPago}}" required>
                        </div>

                        <div class="input-group mt-2">
                            <label for="FormaPago" class="input-group-text">Forma de Pago</label>
                            <select class="form-control" name="FormaPago" id="FormaPago" required>
                                <option value="" disabled>Selecciona una forma de pago</option>
                                <option value="Efectivo" {{#ifCond pago.FormaPago 'Efectivo'}}selected{{/ifCond}}>Efectivo</option>
                                <option value="Tarjeta" {{#ifCond pago.FormaPago 'Tarjeta'}}selected{{/ifCond}}>Tarjeta</option>
                                <option value="Transferencia" {{#ifCond pago.FormaPago 'Transferencia'}}selected{{/ifCond}}>Transferencia</option>
                            </select>
                        </div>

                        <div class="input-group mt-2">
                            <label for="MontoPagado" class="input-group-text">Monto Pagado</label>
                            <input class="form-control" type="number" step="0.01" name="MontoPagado" id="MontoPagado" value="{{pago.MontoPagado}}" required>
                        </div>

                        <div class="input-group mt-2">
                            <label for="NumeroReferencia" class="input-group-text">Número de Referencia</label>
                            <input class="form-control" type="text" name="NumeroReferencia" id="NumeroReferencia" value="{{pago.NumeroReferencia}}" placeholder="Número de referencia">
                        </div>

                        <div class="input-group mt-2">
                            <label for="BancoID" class="input-group-text">Banco</label>
                            <select class="form-control" name="BancoID" id="BancoID">
                                <option value="" disabled>Selecciona un banco</option>
                                {{#each bancos}}
                                    <option value="{{this.BancoID}}" {{#ifCond this.BancoID ../pago.BancoID}}selected{{/ifCond}}>{{this.NombreBanco}}</option>
                                {{/each}}
                            </select>
                        </div>

                        <div class="form-group mt-4 d-grid gap-2">
                            <button class="btn btn-success">Actualizar Pago</button>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
