<div class="container p-4">
    <div class="row">
        <div class="col-md-6 mx-auto">
            <div class="card text-center">
                <div class="card-header">
                    <h3 class="text-uppercase">Registrar Pago</h3>
                </div>
                <div class="card-body">
                    <form action="/addPago" method="post">
                        <div class="input-group mt-2">
                            <label for="VentaID" class="input-group-text">Venta</label>
                            <select class="form-control" name="VentaID" id="VentaID" required>
                                <option value="" disabled selected>Selecciona una venta</option>
                                {{#each ventas}}
                                    <option value="{{this.VentaID}}">{{this.NumeroFacturaTicket}}</option>
                                {{/each}}
                            </select>
                        </div>

                        <div class="input-group mt-2">
                            <label for="FechaPago" class="input-group-text">Fecha de Pago</label>
                            <input class="form-control" type="date" name="FechaPago" id="FechaPago" required>
                        </div>

                        <div class="input-group mt-2">
                            <label for="FormaPago" class="input-group-text">Forma de Pago</label>
                            <select class="form-control" name="FormaPago" id="FormaPago" required>
                                <option value="" disabled selected>Selecciona una forma de pago</option>
                                <option value="Efectivo">Efectivo</option>
                                <option value="Tarjeta">Tarjeta</option>
                                <option value="Transferencia">Transferencia</option>
                            </select>
                        </div>

                        <div class="input-group mt-2">
                            <label for="MontoPagado" class="input-group-text">Monto Pagado</label>
                            <input class="form-control" type="number" step="0.01" name="MontoPagado" id="MontoPagado" required>
                        </div>

                        <div class="input-group mt-2">
                            <label for="NumeroReferencia" class="input-group-text">Número de Referencia</label>
                            <input class="form-control" type="text" name="NumeroReferencia" id="NumeroReferencia" placeholder="Número de referencia">
                        </div>

                        <div class="input-group mt-2">
                            <label for="BancoID" class="input-group-text">Banco</label>
                            <select class="form-control" name="BancoID" id="BancoID">
                                <option value="" disabled selected>Selecciona un banco</option>
                                {{#each bancos}}
                                    <option value="{{this.BancoID}}">{{this.NombreBanco}}</option>
                                {{/each}}
                            </select>
                        </div>

                        <div class="form-group mt-4 d-grid gap-2">
                            <button class="btn btn-success">Registrar Pago</button>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
