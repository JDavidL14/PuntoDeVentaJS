<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-center">
                <div class="card-header">
                    <h3 class="text-uppercase">Editar Producto</h3>
                </div>
                <div class="card-body">
                    <form action="/editProducto/{{producto.ProductoID}}" method="post">

                        <div class="input-group mt-2">
                            <label for="ProductoID" class="input-group-text">Código del Producto</label>
                            <input class="form-control" type="text" name="ProductoID" id="ProductoID" value="{{producto.ProductoID}}" disabled>
                        </div>

                        <div class="input-group mt-2">
                            <label for="Descripcion" class="input-group-text">Descripción</label>
                            <input class="form-control" type="text" name="Descripcion" id="Descripcion" value="{{producto.Descripcion}}" placeholder="Descripción del producto">
                        </div>

                        <div class="input-group mt-2">
                            <label for="PrecioUnitario" class="input-group-text">Precio Unitario</label>
                            <input class="form-control" type="number" step="0.01" name="PrecioUnitario" id="PrecioUnitario" value="{{producto.PrecioUnitario}}" required>
                        </div>

                        <div class="input-group mt-2">
                            <label for="Impuestos" class="input-group-text">Impuestos (%)</label>
                            <input class="form-control" type="number" step="0.01" name="Impuestos" id="Impuestos" value="{{producto.Impuestos}}" required>
                        </div>

                        <div class="input-group mt-2">
                            <label for="NumeroSerie" class="input-group-text">Número de Serie</label>
                            <input class="form-control" type="text" name="NumeroSerie" id="NumeroSerie" value="{{producto.NumeroSerie}}" placeholder="Número de serie">
                        </div>

                        <div class="input-group mt-2">
                            <label for="CategoriaID" class="input-group-text">Categoría</label>
                            <select class="form-control" name="CategoriaID" id="CategoriaID">
                                {{#each categorias}}
                                    <option value="{{this.CategoriaID}}" {{#ifCond this.CategoriaID ../producto.CategoriaID}}selected{{/ifCond}}>{{this.NombreCategoria}}</option>
                                {{/each}}

                            </select>
                        </div>

                        <div class="form-group mt-4 d-grid gap-2">
                            <button class="btn btn-success">Actualizar Producto</button>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
