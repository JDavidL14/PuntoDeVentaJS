<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-center">
                <div class="card-header">
                    <h3 class="text-uppercase">Editar Usuario</h3>
                </div>
                <div class="card-body">
                    <form action="/editUsuario/{{usuario.Id}}" method="post">

                        <!-- Campo para ID del usuario (deshabilitado) -->
                        <div class="input-group mt-2">
                            <label for="Id" class="input-group-text">ID del Usuario</label>
                            <input class="form-control" type="text" name="Id" id="Id" value="{{usuario.Id}}" disabled>
                        </div>

                        <!-- Campo para Nombre de Usuario -->
                        <div class="input-group mt-2">
                            <label for="NombreUsuario" class="input-group-text">Nombre de Usuario</label>
                            <input class="form-control" type="text" name="NombreUsuario" id="NombreUsuario" value="{{usuario.NombreUsuario}}" placeholder="Nombre de usuario" required>
                        </div>

                        <!-- Campo para Contraseña -->
                        <div class="input-group mt-2">
                            <label for="Contrasena" class="input-group-text">Contraseña</label>
                            <input class="form-control" type="password" name="Contrasena" id="Contrasena" placeholder="Nueva contraseña (opcional)">
                        </div>

                        <!-- Campo para Rol -->
                        <div class="input-group mt-2">
                            <label for="Rol" class="input-group-text">Rol</label>
                            <input class="form-control" type="text" name="Rol" id="Rol" value="{{usuario.Rol}}" placeholder="Rol de usuario" required>
                        </div>

                        <!-- Campo para Nombre -->
                        <div class="input-group mt-2">
                            <label for="Nombre" class="input-group-text">Nombre</label>
                            <input class="form-control" type="text" name="Nombre" id="Nombre" value="{{usuario.Nombre}}" placeholder="Nombre" required>
                        </div>

                        <!-- Campo para Apellido -->
                        <div class="input-group mt-2">
                            <label for="Apellido" class="input-group-text">Apellido</label>
                            <input class="form-control" type="text" name="Apellido" id="Apellido" value="{{usuario.Apellido}}" placeholder="Apellido" required>
                        </div>

                        <!-- Campo para Email -->
                        <div class="input-group mt-2">
                            <label for="Email" class="input-group-text">Email</label>
                            <input class="form-control" type="email" name="Email" id="Email" value="{{usuario.Email}}" placeholder="Correo electrónico" required>
                        </div>

                        <!-- Campo para Teléfono (opcional) -->
                        <div class="input-group mt-2">
                            <label for="Telefono" class="input-group-text">Teléfono</label>
                            <input class="form-control" type="text" name="Telefono" id="Telefono" value="{{usuario.Telefono}}" placeholder="Teléfono">
                        </div>

                        <!-- Botón para actualizar usuario -->
                        <div class="form-group mt-4 d-grid gap-2">
                            <button class="btn btn-success">Actualizar</button>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
