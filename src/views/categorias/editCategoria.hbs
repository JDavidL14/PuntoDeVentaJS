<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-center">
                <div class="card-header">
                    <h3 class="text-uppercase">Editar Categoría</h3>
                </div>
                <div class="card-body">
                    <form action="/editCategoria/{{categoria.CategoriaID}}" method="post">

                        <div class="input-group mt-2">
                            <label for="CategoriaID" class="input-group-text">Código</label>
                            <input class="form-control" type="text" name="CategoriaID" id="CategoriaID" value="{{categoria.CategoriaID}}" disabled>
                        </div>

                        <div class="input-group mt-2">
                            <label for="NombreCategoria" class="input-group-text">Nombre de la Categoría</label>
                            <input class="form-control" type="text" name="NombreCategoria" id="NombreCategoria" value="{{categoria.NombreCategoria}}" placeholder="Nombre de la categoría" required>
                        </div>

                        <div class="input-group mt-2">
                            <label for="Descripcion" class="input-group-text">Descripción</label>
                            <textarea class="form-control" name="Descripcion" id="Descripcion" placeholder="Descripción de la categoría" rows="3">{{categoria.Descripcion}}</textarea>
                        </div>

                        <div class="form-group mt-4 d-grid gap-2">
                            <button class="btn btn-success">Actualizar</button>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
