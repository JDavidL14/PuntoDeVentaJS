<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-center">
                <div class="card-header">
                    <h3 class="text-uppercase">Registrar Categoría</h3>
                </div>
                <div class="card-body">
                    <form action="/addCategoria" method="post">

                        <div class="input-group mt-2">
                            <label for="nombreCategoria" class="input-group-text">Nombre de la Categoría</label>
                            <input class="form-control" type="text" name="NombreCategoria" id="nombreCategoria" placeholder="Nombre de la categoría" required>
                        </div>

                        <div class="input-group mt-2">
                            <label for="descripcionCategoria" class="input-group-text">Descripción</label>
                            <textarea class="form-control" name="Descripcion" id="descripcionCategoria" placeholder="Descripción de la categoría" rows="3"></textarea>
                        </div>

                        <div class="form-group mt-4 d-grid gap-2">
                            <button class="btn btn-success">Crear Categoría</button>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
